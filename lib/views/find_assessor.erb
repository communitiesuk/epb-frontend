<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        <%= t('find_an_assessor.top_heading') %>
      </h1>
      <p class="govuk-body">
        <%= t('find_an_assessor.introduction.what_you_need') %>
      </p>

      <ul class="govuk-list govuk-list--bullet">
        <li>
          <%= t('find_an_assessor.introduction.epc') %>
        </li>
        <li>
          <%= t('find_an_assessor.introduction.dec') %>
        </li>
        <li>
          <%= t('find_an_assessor.introduction.ac') %>
        </li>
      </ul>

      <p class="govuk-body">
        <%= t('find_an_assessor.introduction.england_wales_northern_ireland') %>
      </p>

      <p class="govuk-body">
        <%= t('find_an_assessor.introduction.cost') %>
      </p>


      <div class="govuk-inset-text">
        <%== t('find_an_assessor.before_you_start.switch_language.description', :link => '<a href="' + t('find_an_assessor.before_you_start.switch_language.url') + '">' + t('find_an_assessor.before_you_start.switch_language.link') + '</a>' ) %>
      </div>

      <a
        href="<%= localised_url('/find-an-assessor/type-of-property') %>"
        role="button"
        draggable="false"
        class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8"
        data-module="govuk-button">
          <%= t('find_an_assessor.cta') %>
        <svg
          class="govuk-button__start-icon"
          xmlns="http://www.w3.org/2000/svg"
          width="17.5"
          height="19"
          viewBox="0 0 33 40"
          role="presentation"
          focusable="false">
          <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
        </svg>
      </a>

      <h2 class="govuk-heading-m">
        <%= t('find_an_assessor.before_you_start.heading') %>
      </h2>

      <p class="govuk-body">
        <%== t('find_an_assessor.before_you_start.existing_epc.description', :link => '<a href="https://mhclg-epb-prototypes.london.cloudapps.digital/find-a-certificate">' + t('find_an_assessor.before_you_start.existing_epc.link') + '</a>') %>
      </p>

      <p class="govuk-body">
        <%== t('find_an_assessor.before_you_start.phone_text', :link =>  t('find_an_assessor.before_you_start.phone_number') ) %>
      </p>

      <p class="govuk-body">
        <%== t('find_an_assessor.before_you_start.scotland.description', :link => '<a href="https://www.scottishepcregister.org.uk/">' + t('find_an_assessor.before_you_start.scotland.link') + '</a>') %>
      </p>
    </div>
    <%== erb :related__content %>
  </div>
</div>
