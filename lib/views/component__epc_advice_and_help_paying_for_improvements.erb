              <%== t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_upgrade_border_text') %><a class="govuk-link" href=" <%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_upgrade_url') %>"><%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_upgrade_link_text') %></a>
            </li>
          <% end %>
        <% end %>
      <% end %>

      <% unless hide_if_rating_higher_than_d %>
        <% if print_view %>
          <li>
            <%== t('domestic_epc.sections.recommendations.paying_for_energy_improvements.insulation_text') %><a class="govuk-link" href=" <%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.insulation_url') %>"><%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.insulation_print_link_text') %></a>
