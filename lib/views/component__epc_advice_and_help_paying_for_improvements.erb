      <% else %>
        <p class="govuk-body">
          <%== t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_border_text') %><a class="govuk-link" href=" <%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_url') %>"><%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_border_url_text') %></a>
