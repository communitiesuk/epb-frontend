        <p class="govuk-body">
          <a class="govuk-link" href=" <%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_url') %>"><%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_text') %><%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_print_url') %></a>
        </p>
      <% else %>
        <p class="govuk-body">
          <a class="govuk-link" href=" <%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_url') %>"><%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_text') %></a>
        </p>
      <% end %>
    <% end %>

    <% if assessment[:countryName] == "England and Wales" %>
      <% if print_view  %>
        <p class="govuk-body">
          <a class="govuk-link" href=" <%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_url') %>"><%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_text') %><%= t('domestic_epc.sections.recommendations.paying_for_energy_improvements.nest_print_url') %></a>
