<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="govuk-grid-column-two-thirds govuk-!-padding-left-0">
      <h1 class="govuk-heading-xl">
        <%= t('find_a_certificate.top_heading') %>
      </h1>
      <p class="govuk-body">
        <%= t('find_a_certificate.service.introduction') %>
      </p>

      <p class="govuk-body"><%= t('find_a_certificate.service.this_includes') %></p>
      <ul class="govuk-list govuk-list--bullet govuk-!-margin-left-5">
        <li><%== t('find_a_certificate.service.epc') %></li>
        <li><%== t('find_a_certificate.service.dec') %></li>
        <li><%== t('find_a_certificate.service.air_con_cert_report') %></li>
      </ul>

      <div class="govuk-inset-text">
        <%== t('find_a_certificate.before_you_start.switch_language.description', :link => '<a class="govuk-link" href="' + t('find_a_certificate.before_you_start.switch_language.url') + '">' + t('find_a_certificate.before_you_start.switch_language.link') + '</a>' ) %>
      </div>

      <a
        href="<%= localised_url('/find-a-certificate/type-of-property') %>"
        role="button"
        draggable="false"
        class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8"
        data-module="govuk-button">
          <%= t('find_a_certificate.cta') %>
        <svg
          class="govuk-button__start-icon"
          xmlns="http://www.w3.org/2000/svg"
          width="17.5"
          height="19"
          viewBox="0 0 33 40"
          role="presentation"
          focusable="false">
          <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
        </svg>
      </a>

      <h2 class="govuk-heading-m">
        <%= t('find_a_certificate.before_you_start.title') %>
      </h2>

      <p class="govuk-body">
        <%== t('find_a_certificate.before_you_start.property_guidance.description') %> <a href= <%= localised_url(set_subdomain_url("getting-new-energy-certificate")) %>> <%= t('find_a_certificate.before_you_start.property_guidance.link') %></a>
      </p>

      <p class="govuk-body">
        <%== t('find_a_certificate.before_you_start.contact.text', :link=>'<a class="govuk-link" href="' + t('find_a_certificate.before_you_start.contact.link') + '">' + t('find_a_certificate.before_you_start.contact.cta') + '</a>') %>

      </p>

      <p class="govuk-body">
        <%== t('find_a_certificate.before_you_start.scotland.text', :link => '<a href="https://www.scottishepcregister.org.uk/">' + t('find_a_certificate.before_you_start.scotland.cta') + '</a>') %>
      </p>
    </div>
      <%== erb :related__content %>
  </div>
</div>
