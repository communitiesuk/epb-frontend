<div id="rating" class="govuk-body epc-blue-bottom">
  <h2 class="govuk-heading-l"><%= t('dec.sections.rating.title') %></h2>
  <p class="govuk-body"><%= t('dec.sections.rating.emissions_text') %></p>
  <p class="govuk-body"><%== t('dec.sections.rating.text') %></p>
  <p class="govuk-body"><%= t('dec.sections.rating.typical_text') %></p>

  <%== erb :dec__svg_rating, locals: {
    energy_efficiency_band: assessment[:currentAssessment][:energyEfficiencyBand],
    energy_efficiency_rating: assessment[:currentAssessment][:energyEfficiencyRating],
    title: t('dec.sections.rating.chart_title'),
    description: t('dec.sections.rating.chart_description', :energy_efficiency_band => assessment[:currentAssessment][:energyEfficiencyBand].upcase, :energy_efficiency_rating => assessment[:currentAssessment][:energyEfficiencyRating])
  } %>

  <p class="govuk-body"><%== t('dec.sections.rating.guidance_text', :link => '<a class="govuk-link" href="' + t('dec.sections.rating.url') + '">' + t('dec.sections.rating.cta') + '</a>') %></p>
</div>
