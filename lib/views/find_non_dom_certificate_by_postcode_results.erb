<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= t('find_non_dom_certificate_by_postcode_results.top_heading') %>
    </h1>

    <% if results.size > 0 %>
      <p class="govuk-body">
        <%= t('find_non_dom_certificate_by_postcode_results.no_epc.get_a_new_one_with_results') %>
        <a class="govuk-link" href="<%=localised_url(set_subdomain_url("getting-new-energy-certificate"))%>">
          <%= t('find_non_dom_certificate_by_postcode_results.no_epc.get_a_new_one_link') %></a>.
      </p>
      <h2 class="govuk-heading-m"><%= t('find_non_dom_certificate_by_postcode_results.list', :length => count_certificates(results), :postcode => params['postcode'] ) %></h2>
      <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

      <%== erb :find_non_dom_certificate_list_certificate, locals: {
        certificate: results } %>
    <% else %>
      <h2 class="govuk-heading-l"><%= t('find_certificate_by_postcode_results.no_results.no_postcode', :postcode => CGI.escapeHTML(params['postcode'].upcase) ) %></h2>

      <p class="govuk-body">
        <%= t('find_non_dom_certificate_by_postcode_results.no_results.no_certificates') %>
      </p>

      <p class="govuk-body">
        <%= t('find_certificate_by_postcode_results.no_results.search_again.text') %>
      <ul class="govuk-list govuk-list--bullet govuk-!-margin-left-6">
        <li><a class="govuk-link" href="<%=localised_url('/find-a-non-domestic-certificate/search-by-postcode')%>"><%= t('find_certificate_by_postcode_results.no_results.search_again.postcode') %></a></li>
        <li><a class="govuk-link" href="<%=localised_url('/find-a-non-domestic-certificate/search-by-street-name-and-town')%>"><%= t('find_certificate_by_postcode_results.no_results.search_again.street_and_town') %></a></li>
        <li><a class="govuk-link" href="<%=localised_url('/find-a-non-domestic-certificate/search-by-reference-number')%>"><%= t('find_certificate_by_postcode_results.no_results.search_again.certificate_number') %></a></li>
      </ul>
      </p>

      <p class="govuk-body">
        <%= t('find_non_dom_certificate_by_postcode_results.no_epc.get_a_new_one_no_results') %>
        <a class="govuk-link" href="<%=localised_url(set_subdomain_url("getting-new-energy-certificate"))%>">
          <%= t('find_non_dom_certificate_by_postcode_results.no_epc.get_a_new_one_link') %></a>.
      </p>
    <% end %>
  </div>
</div>
