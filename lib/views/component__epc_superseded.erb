<% unless assessment[:supersededBy].nil? %>
  <div class="govuk-warning-text govuk-!-display-none-print" >
    <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
    <strong class="govuk-warning-text__text">
      <span class="govuk-warning-text__assistive">
        <%= t('domestic_epc.superseded.title') %></span>
     <%= t("domestic_epc.superseded.#{defined?(type) ? type : 'certificate'}_message") %>.
      <a class="govuk-link" href="<%= localised_url('/energy-certificate/' + assessment[:supersededBy]) %>">
        <%= t('domestic_epc.superseded.link') %></a>.
    </strong>
  </div>
<% end %>
