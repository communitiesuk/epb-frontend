<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Service Performance</h1>

      <div class="govuk-body">j

        <% locals[:grouped].each do |assessment_type, values| -%>

       <div id="<%= assessment_type.downcase %>">
          <table class="govuk-table" >
            <caption class="govuk-table__caption govuk-table__caption--m">Monthly Assessments Stats <%= assessment_type %></caption>
            <thead class="govuk-table__head">
            <tr class="govuk-table__row">
              <th scope="col" class="govuk-table__header">Month/Year</th>jj
              <th scope="col" class="govuk-table__header">Number Lodged</th>
              <th scope="col" class="govuk-table__header">Average Energy Rating</th>
            </tr>
            </thead>
            <tbody class="govuk-table__body">
            <% values.each do |row| -%>
            <tr class="govuk-table__row" >
              <td class="govuk-table__cell month-year" > <%= row[:month].to_s %></td>
              <td class="govuk-table__cell govuk-table__cell--numeric num-assessments"><%= row[:numAssessments] %></td>
              <td class="govuk-table__cell govuk-table__cell--numeric rating-average"><%= row[:ratingAverage].round(2) %></td>
            </tr>
            <% end -%>
            </tbody>
          </table>
       </div>
        <% end -%>
      </div>
    </div>

  </div>
</div>
