<dt class="govuk-summary-list__key govuk-!-width-one-half" style="vertical-align: top"><%=
  date(year[:date])[2..-1]
%></dt>
<dd class="govuk-summary-list__value govuk-!-width-one-half" style="text-align: right">
  <svg width="90" height="50" style="vertical-align: middle">
  <% band = "band-#{year[:energyEfficiencyBand]}" %>
  <polygon points="0,25 25,50 100,50 100,0 25,0 0,25" class="<%= band.chomp("+") %>"></polygon>
  <text x="30" y="30"><%= year[:energyEfficiencyRating] %> | <%= year[:energyEfficiencyBand].upcase %></text>
  </svg>
</dd>
