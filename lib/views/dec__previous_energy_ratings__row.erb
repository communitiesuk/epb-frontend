<dt class="govuk-summary-list__key govuk-!-width-one-half"><%=
  date(year[:date])[2..-1]
%></dt>
<dd class="govuk-summary-list__value govuk-!-width-one-half">
  <svg width="90" height="50">
  <% band = "band-#{year[:energyEfficiencyBand]}" %>
  <polygon points="0,25 25,50 100,50 100,0 25,0 0,25" class="<%= band.chomp("+") %>"></polygon>
  <text x="30" y="31" class="govuk-!-font-weight-bold"><%= year[:energyEfficiencyRating] %> <%= year[:energyEfficiencyBand].upcase %></text>
  </svg>
</dd>
