<script type = "text/javascript" src="<%= assets_path('/javascript/share-certificate.js') %>"></script>
<div class="component__print govuk-!-display-none-print">

  <h2 class="govuk-heading-m"><%= t("component.share.share_#{type}")%></h2>

  <ul id="share-list">
    <li>
      <p class="govuk-body">
        <a id="email" style="text-decoration: none;"
           href="mailto:?subject= <%= t("#{top_heading}.top_heading")%> <%= t("component.share.email_subject_for")%> <%= find_address_lines_only(assessment)%>&amp;body=<%= t("component.share.email_body_part_1")%> <%= first_word_downcase(t("#{top_heading}.top_heading"))%> <%= t("component.share.email_body_part_2")%> https://find-energy-certificate.service.gov.uk/energy-certificate/<%= assessment[:assessmentId]%>"
           target="_blank"
           title="Email">
        <span class="share-icon">
          <img src="<%= assets_path('/images/email.svg') %>" alt="">
        </span>
          <%= t("component.share.email")%>
        </a>
      </p>
    </li>
    <li>
      <p id="copy-to-clipboard-margin" class="govuk-body">
        <button id="copyToClipboardButton" class="govuk-body" onclick="clickHandler()">
        <span class="share-icon">
          <img src="<%= assets_path('/images/copy-link.svg') %>" alt="">
        </span>
          <%= t("component.share.copy_link")%>
        </button>
        <script>document.getElementById('copyToClipboardButton').style.display = 'inline';</script>
      </p>
    </li>
    <li>
      <p class="govuk-body">
        <a rel="nofollow" style="text-decoration: none; display: none;" id="link" href="<%= localised_url(request.path_info) + (localised_url(request.path_info).include?("?") ? "&" : "?") %>print=true" class="govuk-link govuk-!-margin-bottom-5" id="link">
        <span class="share-icon">
          <img src="<%= assets_path('/images/print.svg') %>" alt="">
        </span>
          <%= t("component.share.print_link")%>
        </a>
        <script>document.getElementById('link').style.display = 'inline';</script>
      </p>
    </li>
  </ul>
</div>
