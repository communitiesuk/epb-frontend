<% if defined?(sections) %>
  <div class="govuk-accordion" data-module="govuk-accordion" id="accordion-<%= identifier.downcase %>">
    <% sections.each_with_index do |section, index| %>
      <div class="govuk-accordion__section">
        <div class="govuk-accordion__section-header">
          <h2 class="govuk-accordion__section-heading">
            <span class="govuk-accordion__section-button" id="accordion-<%= identifier.downcase %>-heading-<%= index %>">
              <%= section[:heading] %>
            </span>
          </h2>
        </div>
        <div id="accordion-<%= identifier.downcase %>-content-<%= index %>" class="govuk-accordion__section-content" aria-labelledby="accordion-default-heading-<%= index %>">
          <p class='govuk-body'><%== section[:content] %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
