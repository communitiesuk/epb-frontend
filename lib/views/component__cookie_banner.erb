<% header = t('layout.body.cookie_banner.title') + get_gov_header %>

<div class="govuk-cookie-banner govuk-!-display-none-print" data-nosnippet role="region" aria-label="<%= header %>" hidden>
  <div class="govuk-cookie-banner__message govuk-width-container" hidden>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-cookie-banner__heading govuk-heading-m"><%= header %></h2>

        <div class="govuk-cookie-banner__content">
          <p class="govuk-body"><%= t('layout.body.cookie_banner.intro_essential') %></p>
          <p class="govuk-body"><%= t('layout.body.cookie_banner.intro_analytics') %></p>
        </div>
      </div>
    </div>

    <div class="govuk-button-group">
      <button id="accept-button" type="button" class="govuk-button" data-module="govuk-button">
        <%= t('layout.body.cookie_banner.accept') %>
      </button>
      <button id="reject-button" type="button" class="govuk-button" data-module="govuk-button">
        <%= t('layout.body.cookie_banner.reject') %>
      </button>
      <a class="govuk-link" href="<%= localised_url('/cookies') %>"><%= t('layout.body.cookie_banner.view_cookies') %></a>
    </div>
  </div>

  <div id="confirmation" class="govuk-cookie-banner__message govuk-width-container" role="alert" tabindex="-1" hidden>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <div class="govuk-cookie-banner__content">

          <% link = '<a class="govuk-link" href="' + localised_url('/cookies') + '">' +
            t('layout.body.cookie_banner.change_settings') + '</a>' %>
          <p class="govuk-body" id="accepted-confirmation" hidden><%== t('layout.body.cookie_banner.accepted', change_settings_link: link) %></p>
          <p class="govuk-body" id="rejected-confirmation" hidden><%== t('layout.body.cookie_banner.rejected', change_settings_link: link) %></p>
        </div>

      </div>
    </div>

    <div class="govuk-button-group">
      <button id="hide-cookie-message" class="govuk-button" data-module="govuk-button">
        <%= t('layout.body.cookie_banner.hide_message') %>
      </button>
    </div>
  </div>
</div>
