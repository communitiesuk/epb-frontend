<% header = t('layout.body.cookie_banner.title') + get_gov_header %>

<div class="govuk-cookie-banner" data-nosnippet role="region" aria-label="<%= header %>">
  <div class="govuk-cookie-banner__message govuk-width-container">

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-cookie-banner__heading govuk-heading-m"><%= header %></h2>

        <div class="govuk-cookie-banner__content">
          <p><%= t('layout.body.cookie_banner.intro_essential') %></p>
          <p><%= t('layout.body.cookie_banner.intro_analytics') %></p>
        </div>
      </div>
    </div>

    <div class="govuk-button-group">
      <button type="button" class="govuk-button" data-module="govuk-button" id="accept-button">
        <%= t('layout.body.cookie_banner.accept') %>
      </button>
      <button type="button" class="govuk-button" data-module="govuk-button" id="reject-button">
        <%= t('layout.body.cookie_banner.reject') %>
      </button>
      <a class="govuk-link" href="<%= localised_url('/cookies') %>"><%= t('layout.body.cookie_banner.view_cookies') %></a>
    </div>
  </div>

  <div class="govuk-cookie-banner__message govuk-width-container" role="alert" id="confirmation" hidden>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <div class="govuk-cookie-banner__content">

          <% link = '<a class="govuk-link" href="' + localised_url('/cookies') + '">' +
            t('layout.body.cookie_banner.change_settings') + '</a>' %>
          <p id="accepted-confirmation" hidden><%== t('layout.body.cookie_banner.accepted', change_settings_link: link) %></p>
          <p id="rejected-confirmation" hidden><%== t('layout.body.cookie_banner.rejected', change_settings_link: link) %></p>
        </div>

      </div>
    </div>

    <div class="govuk-button-group">
      <button class="govuk-button" data-module="govuk-button" id="hide-cookie-message">
        <%= t('layout.body.cookie_banner.hide_message') %>
      </button>
    </div>
  </div>
</div>
