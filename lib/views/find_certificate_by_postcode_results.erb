<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <a
      href="<%= localised_url('/find-a-certificate/search-by-postcode')%>"
      class="govuk-back-link">
      <%=t('layout.body.breadcrumb.back')%>
    </a>

    <h1 class="govuk-heading-xl">
      <%= t('find_certificate_by_postcode_results.top_heading') %>
    </h1>

    <p class="govuk-body">
      <%= t('find_certificate_by_postcode_results.expired_epc_availability') %>
    </p>

    <p class="govuk-body">
      <%= t('find_certificate_by_postcode_results.no_epc.get_a_new_one') %>
      <a href= <%=localised_url(set_subdomain_url("getting-new-energy-certificate"))%>><%= t('find_certificate_by_postcode_results.no_epc.get_a_new_one_link') %></a>
    </p>

    <p class="govuk-body">
      <%= t('find_certificate_by_postcode_results.contact_support_part_one') %>
      <a href="mailto:mhclg.digital-services@communities.gov.uk?subject=EPB - ">
        <%= t('find_certificate_by_postcode_results.mhclg_support_email') %></a><%= t('find_certificate_by_postcode_results.contact_support_part_two') %>
    </p>

    <% if results.size > 0 %>
      <h2 class="govuk-heading-m"><%= t('find_certificate_by_postcode_results.list', :length => count_certificates(results), :postcode => params['postcode'] ) %></h2>
      <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

      <%== erb :find_certificate_list_certificate, locals: {
        certificate: results } %>
    <% else %>
      <p class="govuk-body">
        <%= t('find_certificate_by_postcode_results.no_certificates') %>
      </p>
    <% end %>
  </div>
</div>
